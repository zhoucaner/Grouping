<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/content">
    
    	<RelativeLayout
        		android:layout_width="match_parent"
				android:layout_height="48dp"
				android:background="@drawable/title" 
				android:focusable="true"
				android:focusableInTouchMode="true">
                 
        	<ImageButton
           		 android:id="@+id/per_messg_back"
           		 android:layout_width="48dp"
           		 android:layout_height="match_parent"
           		 android:layout_alignParentLeft="true"
           		 android:layout_marginBottom="1dp"
           		 android:layout_marginLeft="1dp"
           		 android:layout_marginTop="1dp"
           		 android:background="@android:color/transparent"
           		 android:src="@drawable/back_cursor" />
        	
        	<TextView
        		android:paddingLeft="10dp"
        		android:layout_toRightOf="@id/per_messg_back"
        		android:layout_width="match_parent"
      			android:layout_height="match_parent"
  				android:background="@drawable/title" 
      			android:gravity="center_vertical"
      			android:text="个人信息"
      			android:textSize="20sp"
      			android:textColor="@drawable/white"/>
			<Button
				android:id="@+id/editing"
				android:layout_width="60dp"
				android:layout_height="55dp"
				android:layout_alignParentRight="true"
				android:layout_marginRight="67dp"
				android:background="@drawable/button_shape"
				android:text="编辑"
				android:textSize="20sp"
				android:textColor="@drawable/white" />
   	 	</RelativeLayout>
    	
    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:orientation="vertical" 
    	    android:layout_marginTop="15dp">
    	    
    	    <TextView 
    	        android:id="@+id/per_zhanghao"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:text="帐号"
    	        android:textSize="20sp"
    	        android:textColor="@drawable/blue"
    	        android:layout_marginLeft="8dp"/>
    	    
    	    <RelativeLayout 
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:layout_marginTop="10dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/per_userid"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="15dp"
				    android:text="ID:"
				    android:textColor="@drawable/blue"
					android:enabled="false"
				    android:textSize="20sp" />
				
				<TextView
				    android:id="@+id/per_userid_edit"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginLeft="46dp"
				    android:layout_toRightOf="@id/per_userid"
				    android:text="31301100" 
				    android:textSize="18sp"
                    android:enabled="false"
				    android:padding="12dp"/>

			</RelativeLayout>
			
    	    <View
    	        android:layout_width="300dp"
    	        android:layout_height="0.5dip"
    	        android:background="#33000000" 
    	        android:layout_gravity="center"/>
    	    
    	    <RelativeLayout 
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/per_username"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="15dp"
				    android:text="用户名:"
				    android:textColor="@drawable/blue"
				    android:textSize="20sp" />
				
				<TextView
				    android:id="@+id/per_username_edit"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginLeft="24dp"
				    android:layout_toRightOf="@id/per_username"				
				    android:text="linda"
					android:enabled="false"
					android:textSize="18sp"
				    android:padding="12dp"/>

			</RelativeLayout>
			
    	    <View
    	        android:layout_width="300dp"
    	        android:layout_height="0.5dip"
    	        android:background="#33000000" 
    	        android:layout_gravity="center"/>
			
    	    <RelativeLayout 
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/per_sex"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="14dp"
				    android:text="性别:"
				    android:textColor="@drawable/blue"
				    android:textSize="20sp" />
				
				<Spinner 
    				android:layout_width="150dp"
    				android:layout_height="45dp"
    				android:id="@+id/spinner"
    				android:layout_toRightOf="@id/per_sex"
					android:layout_marginLeft="45dp"/>
			</RelativeLayout>
			
    	    <View
    	        android:layout_width="300dp"
    	        android:layout_height="0.5dip"
    	        android:background="#33000000" 
    	        android:layout_gravity="center"/>
			
    	    <RelativeLayout 
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/per_class"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="14dp"
				    android:text="行政班:"
				    android:textColor="@drawable/blue"
				    android:textSize="20sp" />
				
				<TextView
				    android:id="@+id/per_class_edit"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginLeft="24dp"
				    android:layout_toRightOf="@id/per_class"				
				    android:text="计算1304班"
					android:enabled="false"
					android:textSize="18sp"
				    android:padding="12dp"/>

			</RelativeLayout>
			
    	    <View
    	        android:layout_width="300dp"
    	        android:layout_height="0.5dip"
    	        android:background="#33000000" 
    	        android:layout_gravity="center"/>
			
    	    <RelativeLayout 
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/per_email"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="14dp"
				    android:text="邮箱:"
				    android:textColor="@drawable/blue"
				    android:textSize="20sp" />
				
				<TextView
				    android:id="@+id/per_email_edit"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginLeft="15dp"
				    android:layout_toRightOf="@id/per_email"				
				    android:text="31301100@zuccmail.edu.cn"
					android:enabled="false"
					android:textSize="17sp"
				    android:padding="12dp"/>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/white">

				<TextView
					android:id="@+id/per_introduction"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:layout_marginLeft="14dp"
					android:text="个人简介："
					android:textColor="@drawable/blue"
					android:textSize="20sp" />

				<TextView
					android:id="@+id/other_introduction"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="100dp"
					android:layout_toRightOf="@id/per_introduction"
					android:text="这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介"
					android:textSize="17sp"
					android:padding="12dp"
					android:enabled="false"/>
			</RelativeLayout>
    	    <TextView 
    	        android:id="@+id/per_safe"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:layout_marginTop="15dp"
    	        android:text="安全"
    	        android:textSize="20sp"
    	        android:textColor="@drawable/blue"
    	        android:layout_marginLeft="8dp"/>
    	    
    	    <RelativeLayout 
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:layout_marginTop="10dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/per_pwd_edit"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="15dp"
				    android:text="密码修改"
				    android:textColor="@drawable/blue"
				    android:textSize="20sp" />
			</RelativeLayout>
	</LinearLayout>

</LinearLayout>

