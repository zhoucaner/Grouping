<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/content">
    
    	<RelativeLayout
        		android:layout_width="match_parent"
				android:layout_height="48dp"
				android:background="@drawable/title" 
				android:focusable="true"
				android:focusableInTouchMode="true">
                 
        	<ImageButton
           		 android:id="@+id/per_messg_back"
           		 android:layout_width="48dp"
           		 android:layout_height="match_parent"
           		 android:layout_alignParentLeft="true"
           		 android:layout_marginBottom="1dp"
           		 android:layout_marginLeft="1dp"
           		 android:layout_marginTop="1dp"
           		 android:background="@android:color/transparent"
           		 android:src="@drawable/back_cursor" />
        	
        	<TextView
        	    android:id="@+id/other_cname"
        		android:paddingLeft="10dp"
        		android:layout_toRightOf="@id/per_messg_back"
        		android:layout_width="match_parent"
      			android:layout_height="match_parent"
  				android:background="@drawable/title" 
      			android:gravity="center_vertical"
      			android:textSize="20sp"
      			android:textColor="@drawable/white"/>                            
   	 	</RelativeLayout>
    	
    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:orientation="vertical"
    	    android:layout_marginTop="15dp">
    	    
    	    <RelativeLayout 
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:layout_marginTop="10dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/other_userid"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="15dp"
				    android:text="ID："
				    android:textColor="@drawable/blue"
				    android:textSize="20sp"/>
				
				<TextView
				    android:id="@+id/other_cid"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_toRightOf="@id/other_userid"
				    android:text="31301100" 
				    android:textSize="18sp"
				    android:padding="12dp"
				    android:enabled="false"/>

			</RelativeLayout>
			
    	    <View
    	        android:layout_width="300dp"
    	        android:layout_height="0.5dip"
    	        android:background="#33000000" 
    	        android:layout_gravity="center"/>
			
    	    <View
    	        android:layout_width="300dp"
    	        android:layout_height="0.5dip"
    	        android:background="#33000000" 
    	        android:layout_gravity="center"/>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:layout_marginTop="10dp"
				android:background="@drawable/white">

				<TextView
					android:id="@+id/other_username"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:layout_marginLeft="15dp"
					android:text="姓名："
					android:textColor="@drawable/blue"
					android:textSize="20sp" />

				<TextView
					android:id="@+id/other_cName"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_toRightOf="@id/other_username"
					android:text="周璨珥"
					android:textSize="18sp"
					android:padding="12dp"
					android:enabled="false"/>

			</RelativeLayout>

			<View
				android:layout_width="300dp"
				android:layout_height="0.5dip"
				android:background="#33000000"
				android:layout_gravity="center"/>

			<View
				android:layout_width="300dp"
				android:layout_height="0.5dip"
				android:background="#33000000"
				android:layout_gravity="center"/>
    	    <RelativeLayout
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/per_sex"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="14dp"
				    android:text="性别："
				    android:textColor="@drawable/blue"
				    android:textSize="20sp" />
				
				<TextView
				    android:id="@+id/other_sex"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_toRightOf="@id/per_sex"
				    android:text="女"
				    android:textSize="18sp"
				    android:padding="12dp"
				    android:enabled="false"/>
				
			</RelativeLayout>
			
    	    <View
    	        android:layout_width="300dp"
    	        android:layout_height="0.5dip"
    	        android:background="#33000000" 
    	        android:layout_gravity="center"/>
			
    	    <RelativeLayout 
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/per_class"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="14dp"
				    android:text="行政班："
				    android:textColor="@drawable/blue"
				    android:textSize="20sp" />
				
				<TextView
				    android:id="@+id/other_cclass"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_toRightOf="@id/per_class"
				    android:text="计算1304班" 
				    android:textSize="18sp"
				    android:padding="12dp"
				    android:enabled="false"/>

			</RelativeLayout>
			
    	    <View
    	        android:layout_width="300dp"
    	        android:layout_height="0.5dip"
    	        android:background="#33000000" 
    	        android:layout_gravity="center"/>
			
    	    <RelativeLayout 
    	    	android:layout_width="match_parent"
    	    	android:layout_height="45dp"
    	    	android:background="@drawable/white">

				<TextView
				    android:id="@+id/per_email"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="14dp"
				    android:text="邮箱："
				    android:textColor="@drawable/blue"
				    android:textSize="20sp" />
				
				<TextView
				    android:id="@+id/other_email_edit"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_toRightOf="@id/per_email"
				    android:text="31301100@zuccmail.edu.cn" 
				    android:textSize="17sp"
				    android:padding="12dp"
				    android:enabled="false"/>
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/white">

				<TextView
					android:id="@+id/per_introduction"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:layout_marginLeft="14dp"
					android:text="个人简介："
					android:textColor="@drawable/blue"
					android:textSize="20sp" />

				<TextView
					android:id="@+id/other_introduction"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="100dp"
					android:layout_toRightOf="@id/per_introduction"
					android:text="这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介"
					android:textSize="17sp"
					android:padding="12dp"
					android:enabled="false"/>
			</RelativeLayout>
	</LinearLayout>

</LinearLayout>

