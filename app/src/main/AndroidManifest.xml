<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zhou.grouping">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".group.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".group.LoginActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <activity
            android:name=".group.MainActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:windowSoftInputMode="stateHidden"></activity>

        <activity
            android:name=".group.SearchGrpActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <activity
            android:name=".group.RegisterActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <activity
            android:name=".group.CreatGrpActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <activity
            android:name=".group.AllZuActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <activity
            android:name=".group.EachZuActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <activity
            android:name=".group.PersonalMessgActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>

        <activity
            android:name=".group.OtherMessgActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>

    </application>

</manifest>